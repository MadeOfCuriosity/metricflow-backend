# ===========================================
# MetricFlow Backend Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Environment (development or production)
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/metricflow

# JWT Settings
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS - Frontend URL (strict in production)
FRONTEND_URL=http://localhost:5173

# Redis (optional - for distributed rate limiting in production)
# REDIS_URL=redis://localhost:6379/0

# Gemini API (recommended - simpler setup)
# Get an API key from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key

# Google Cloud AI (alternative - uses mock responses if neither is configured)
# Set up a GCP project and enable Vertex AI API
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_REGION=us-central1
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Rate Limiting for AI features
AI_RATE_LIMIT_PER_DAY=50
